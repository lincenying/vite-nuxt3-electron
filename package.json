{
  "name": "nuxt3-electron-ts-template",
  "version": "1.0.0",
  "private": true,
  "description": "A simple starter app built with just Electron, Vue3, Typescript, and Vite",
  "author": "LinCenYing <lincenying@gmail.com>",
  "main": "dist-electron/main.js",
  "scripts": {
    "postinstall": "nuxi prepare",
    "prepare[-del]": "npx simple-git-hooks",
    "lint-staged": "lint-staged",
    "serve": "pnpm app:dev",
    "build": "pnpm app:build",
    "preview": "pnpm app:preview",
    "nuxt:postinstall": "nuxt prepare",
    "nuxt:dev": "nuxt dev",
    "nuxt:build": "nuxt build",
    "nuxt:generate": "nuxt generate",
    "nuxt:preview": "nuxt preview",
    "app:dev": "tsc && concurrently \"nuxt dev\" \" electron .\" \"tsc -w\"",
    "app:build": "pnpm nuxt:build && tsc && electron-builder",
    "app:preview": "pnpm nuxt:build && tsc && electron .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "vue-tsc --noEmit",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "pack": "electron-builder",
    "electron:generate-icons": "electron-icon-builder --input=./public/favicon.png --output=build --flatten"
  },
  "build": {
    "appId": "your.app.id",
    "asar": false,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      ".output/**/*",
      "dist-electron"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ],
      "icon": "./build/icons/icon.ico"
    },
    "win": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico"
    }
  },
  "simple-git-hooks[-del]": {
    "pre-commit": "npm run lint-staged"
  },
  "lint-staged[-del]": {
    "*.{[jt]s?(x),vue,md}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix --allow-empty-input"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.1.4",
    "@iconify-json/carbon": "^1.2.14",
    "@iconify-json/twemoji": "^1.2.4",
    "@lincy/async-validation": "^1.4.0",
    "@lincy/eslint-config": "^6.0.0",
    "@lincy/stylelint-config": "^2.2.0",
    "@lincy/unocss-base-config": "^2.3.0",
    "@lincy/utils": "^0.7.0",
    "@nuxt/image": "^1.11.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@types/md5": "^2.3.6",
    "@types/mockjs": "^1.0.10",
    "@typescript-eslint/parser": "^8.46.2",
    "@unocss/eslint-config": "^66.5.4",
    "@unocss/nuxt": "^66.5.4",
    "@vite-pwa/nuxt": "^1.0.7",
    "@vue-macros/nuxt": "^3.1.1",
    "@vueuse/nuxt": "^13.9.0",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.38.0",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.5",
    "md-editor-v3": "^6.1.0",
    "md5": "^2.3.0",
    "mockjs": "^1.1.0",
    "nuxt": "^4.1.3",
    "nuxt-electron": "^0.7.0",
    "pinia": "^3.0.3",
    "sass": "^1.93.2",
    "simple-git-hooks": "^2.13.1",
    "store2": "^2.14.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue": "^3.5.22",
    "vue-inline-svg": "^4.0.1",
    "vue-tsc": "^3.1.1"
  }
}
